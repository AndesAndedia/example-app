const db = require('../../../connection/dbConnect');

const deletePublisher = async(req, res) => {
    const { id } = req.params;

    const query = `delete FROM publishers WHERE id_publisher = ${id}`;

    const data = await db.query(query);
    if(data.rowCount==0) return res.status(400).send(`There is no publisher with id = ${id}`);

    res.status(200).send(`Publisher deleted with ID: ${id}`)
  }

  module.exports = deletePublisher;